@import '../../styles/iconfont.wxss';

/* components/titlestasticsitem/titlestasticsitem.wxss */
.title-stastics-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 40rpx;
  border-bottom: 2rpx solid #eee;
  box-sizing: border-box;
  background-color: #fff;
}

.title-stastics-item .left {
  padding: 8px;
  font-size: 40rpx;
  line-height: 40rpx;
  font-weight: 600;
  border-radius: 50%;
  color: #fff;
  flex-shrink: 0;
}

.title-stastics-item .center {
  margin: 0 10px;
  flex-grow: 1;
}

.title-stastics-item .center .title {
  font-size: 32rpx;
}

.title-stastics-item .center .bottom {
  font-size: 30rpx;
  color: gray;
}

.title-stastics-item .center .count {
  margin-left: 16rpx; 
}

.title-stastics-item .right {
  padding: 8px;
  font-size: 36rpx;
  color: #000;
  flex-shrink: 0;
}
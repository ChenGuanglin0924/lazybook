/* components/nodata/nodata.wxss */
.no-data {
  width: 300rpx;
  height: 300rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: border-box;
}

.no-data .img {
  width: 100%;
  height: 65%;
}

.no-data .text {
  font-size: 32rpx;
  margin-top: 36rpx;
  color: gray;
}
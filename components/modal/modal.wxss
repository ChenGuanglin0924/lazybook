/* components/inputModal/modal.wxss */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .4);
}

.modal .container {
  position: absolute;
  width: 500rpx;
  height: 300rpx;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
  transition: all 100ms linear;
}

.modal .header {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  box-sizing: border-box;
}

.modal .content {
  width: 100%;
  height: 100rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.modal .content input {
  padding: 12rpx;
  border: 2rpx solid #e9e9e9;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: left;
}

.modal .footer {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
}

.modal .footer .btn {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 1;
  font-size: 32rpx;
}

.modal .footer .btn:active {
  background-color: rgba(0, 0, 0, .1)
}

.modal .footer .ok {
  color: #ffa200;
}
/* components/calculator/calculator.wxss */
.calculator {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.calculator .result-container {
  position: absolute;
  bottom: 400rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  letter-spacing: 2rpx;
  border-bottom: 2rpx solid #696969;
  background-color: #313131;
  color: #fff;
  box-sizing: border-box;
}

.result-container .equil {
  color: #ffa200;
}

.result-container .calc-con {
  width:500rpx;
  height:100rpx;
  padding: 0 20rpx;
}

.result-container .calc-res {
  width:140rpx;
  height:100rpx;
  text-align: right;
  padding: 0 20rpx;
}

.calculator .calc-container {
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 400rpx;
  background-color: #313131;
  box-sizing: border-box;
}

.calculator .row {
  display: flex;
  align-items: center;
}

.calculator .row .item {
  width: 187.5rpx;
  height: 100rpx;
  line-height: 100rpx;
  flex-grow: 1;
  text-align: center;
  border: 2rpx solid #363636;
  color: #fff;
  box-sizing: border-box;
}

.calculator .row .item:active {
   background-color: #696969;
}
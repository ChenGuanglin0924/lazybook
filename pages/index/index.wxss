/**index.wxss**/
.login-img {
  width: 100%;
  height: 400rpx;
}

.login-type-btn {
  position: absolute;
  bottom: 50rpx;
  margin: 0 auto;
  color: gray;
}

.login-btn {
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: lightgreen;
}

/* 微信登录 */
.weichat-login {
  width: 90%;
  margin-top: 50rpx;
}

.weichat-login-info {
  display: flex;
  flex-direction: column;
  justify-content: left;
  align-items: flex-start;
  margin-top: 20px;
  padding-left: 5px;
}

.tip-title {
  font-size: 16px;
  color: gray;
}

.tip-content {
  margin: 10px 0;
  padding-left: 12px;
  font-size: 12px;
  color: darkgray;
}

/*手机号登录*/
.phone-login {
  width: 100%;
  margin-top: 20px;
}

.phone-login-code {
  /* width: 100%; */
  width: calc(100% - 30px);
  /* margin: 20px 0; */
  margin: 0 auto;
  padding: 0 15px;
  border-top: 1px solid gainsboro;
  border-bottom: 1px solid gainsboro;
  background-color: #fff;
}

.phone-num {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid gainsboro;
}

.phone-num .code {
  align-self: center;
  flex-basis: 100px;
  border-left: 1px solid gainsboro;
  padding-left: 10px;
  word-wrap: nowrap;
}

.phone-code {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items:center;
  padding: 10px 0;
}

.info {
  /* width: 100px; */
  font-size: 14px;
  word-wrap: nowrap;
  margin-right: 25px; 
}

input {
  /* margin-top: 5px; */
  flex-grow:1;
  font-size: 14px;
  flex-basis: 100px;
}

.phone-login .login-btn {
  width: 90%;
  margin: 24px auto;
  padding: 8px;
  text-align: center;
  letter-spacing: 8px;
  font-weight: 400;
  border-radius: 4px;
  border: 1px solid lightgray;
}

.phone-login .login-btn:hover {
  opacity: .8;
}
/* pages/book.wxss */
.book-info {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 350rpx;
}

.book-info .book-bgimg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.book-info .book-name {
  position: absolute;
  top: 10px;
  margin: 0 auto;
  left: 50%;
  padding: 5px 20px;
  transform: translateX(-50%);
  border: 1px solid rgba(255, 255, 255, .1);
  border-radius: 10px;
  font-size: 16px;
  background-color: rgba(0, 0, 0, .4);
  color: #fff;
  z-index: 2;
}

.book-info .price {
  font-size: 18px;
}

.book-info .info {
  font-size: 12px;
  margin-top: 4px; 
}

.book-info .total-wrapper {
  position: absolute;
  padding: 5px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* border: 1px solid rgba(255, 255, 255, .2);
  border-radius: 10px;
  background-color: rgba(0, 0, 0, .3); */
  color: #fff;
  z-index: 2;
}

.book-info .total-income {
  bottom: 10px;
  left: 20px;
}

.book-info .total-expense {
  bottom: 10px;
  right: 20px;
}

.bills-content {
  position: relative;
  width: 100%;
  height: calc(100% - 350rpx);
}

.bills-list { 
  width: 100%;
  height: 100%;
}

.add-bill {
  position: fixed;
  box-sizing: border-box;
  /* margin: 0 auto; */
  right: 40rpx;
  bottom: 24rpx;
  padding: 16rpx;
  text-align: center;
  font-size: 24px;
  /* font-weight: 600; */
  line-height: 24px;
  /* border: 1px solid #e9e9e9; */
  border-radius: 20%;
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
}
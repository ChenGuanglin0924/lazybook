/* pages/bookedit/bookEdit.wxss */
.book-edit {
  background-color: #fff;
}

.book-edit .edit-main {
  width: 100%;
  height: calc(100% - 200rpx);
}

.book-edit .edit-title {
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e9e9e9;
}

.edit-title .type {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: 600;
  color: #fff;
  background-color: orange;
  border-radius: 50%;
  padding: 16rpx;
}

.edit-title .name {
  width: 100%;
  max-width: 350rpx;
  font-size: 36rpx;
  flex-grow: 1;
  font-weight: 600;
  margin-left: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.edit-title .price {
  width: 200rpx;
  text-align: right;
  font-size: 36rpx;
  font-weight: 600;
  /* text-align: right */
}

.book-edit .edit-content {
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
}

/* 选择图标容器 */
.edit-content .icon-content {
  width: 100%;
  /* flex-grow: 1; */
  border-bottom: 2rpx solid #e9e9e9
}

.edit-content .content-title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #e9e9e9;
  color: gray;
}

.icon-content .content-items {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.icon-content .content-items .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 150rpx;
  padding: 16rpx;
  box-sizing: border-box;
}

.icon-content .content-items .active .text {
  color: #ffa200 !important;
}

.icon-content .content-items .active .icon {
  background-color: #ffa200 !important;
  color: #fff !important;
}

.icon-content .content-items .item text {
  max-width: 116rpx;
  display: block;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.icon-content .content-items .item .icon {
  font-size: 48rpx;
  line-height: 48rpx;
  border-radius: 50%;
  background-color: #eee;
  color: gray;
  padding: 16rpx;
}

.icon-content .content-items .item .text {
  font-size: 24rpx;
  margin-top: 8rpx;
  color: #1F1F1F;
}

/* 选择颜色容器 */
.edit-content .color-content {
  width: 100%;
  border-bottom: 2rpx solid #e9e9e9;
}

.color-content .content-colors {
  width: 100%;
  height: 140rpx;
}

.color-content .content-colors .colors-view {
  height: 100%;
}

.color-content .content-colors .colors-view .item {
  width: 76rpx;
  height: 76rpx;
  margin: 32rpx 28rpx;
  border-radius: 50%;
  border: 2rpx solid transparent;
  display: inline-block;
}

.color-content .content-colors .colors-view .active {
  border: 2rpx solid #ffa200;
  box-shadow:0px 0px 20rpx #ffa200;
}

/* 备注 */
.description-content .content-description {
  width: 100%;
  padding: 16rpx 40rpx;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  color: #1F1F1F;
  box-sizing: border-box;
}

.description-content .place-holder {
  color: gray;
}

.edit-menus-outer {
  width: 100%;
  height: 200rpx;
}

/* 脚部 */
.book-edit .edit-foot {
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #e9e9e9;
}

/* 标签 */
.edit-foot .labels-content {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 16rpx 0;
  box-sizing: border-box;
}

.edit-foot .labels-content .labels-info {
  width: 170rpx;
  font-size: 28rpx;
  text-align: center;
  color: gray;
  border-right: 1px solid #e9e9e9;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.edit-foot .labels-content .none-labels {
  /* width: calc(100% - 170rpx); */
  font-size: 28rpx;
  color: gray;
  padding: 0 28rpx;
  box-sizing: border-box;
 }

.edit-foot .labels-content .content-labels {
  width: calc(100% - 170rpx);
  height: 100%;
}

.labels-content .content-labels .labels-view {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}


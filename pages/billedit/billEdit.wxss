.labels-content .add-label {
  z-index: 1;
  width: 100rpx;
  /* height: 50rpx; */
  font-size: 64rpx;
  line-height: 100rpx;
  text-align: center;
  color: #ffa200;
  background-color: #fff;
}

/* 菜单栏 */
.edit-foot .menus-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 16rpx 0;
  border-top: 2rpx solid #e9e9e9;
  box-sizing: border-box;
}

.menus-content .menus {
  display: flex;
  flex-direction: flex-start;
}

.menus-content .menus .active {
  color: #ffa200;
}

.menus-content .menu {
  font-size: 48rpx;
  color: gray;
  margin-left: 28rpx;
}

.menus-content .labels {
  max-width: 350rpx;
  font-size: 28rpx;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  border: 2rpx solid gray;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.menus-content .ok {
  font-size: 64rpx;
  padding: 0 24rpx;
  color: #ffa200;
  box-sizing: border-box;
}
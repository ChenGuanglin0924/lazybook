/* pages/mapviewer/mapViewer.wxss */
.map-viewer map {
  width: 100%;
  height: 100%
}

.map-viewer map .view {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  bottom: 80rpx;
  right: 64rpx;
  padding: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  border: 1px solid #eee;
  box-shadow:0px 0px 10px #9e9e9e;
}